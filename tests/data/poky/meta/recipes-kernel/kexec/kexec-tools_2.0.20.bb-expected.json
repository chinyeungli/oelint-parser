  "DEPENDS": "zlib xz",
  "SRC_URI": "${KERNELORG_MIRROR}/linux/utils/kernel/kexec/kexec-tools-${PV}.tar.gz \u001b           file://kdump \u001b           file://kdump.conf \u001b           file://kdump.service \u001b           file://0001-powerpc-change-the-memory-size-limit.patch \u001b           file://0002-purgatory-Pass-r-directly-to-linker.patch \u001b           file://0003-kexec-ARM-Fix-add_buffer_phys_virt-align-issue.patch \u001b           file://0004-x86_64-Add-support-to-build-kexec-tools-with-x32-ABI.patch \u001b           file://0005-Disable-PIE-during-link.patch \u001b           file://0006-kexec-arm-undefine-__NR_kexec_file_load-for-arm.patch \u001b           file://0007-kexec-un-break-the-build-on-32-bit-x86.patch \u001b           file://0001-kexec-Fix-build-with-fno-common.patch \u001b           ",
  "SRC_URI[md5sum]": "46724b67f32501c5d3e778161347cad9",
  "SRC_URI[sha256sum]": "cb16d79818e0c9de3bb3e33ede5677c34a1d28c646379c7ab44e0faa3eb57a16",
  "inherit": "autotools update-rc.d systemd",
  "EXTRA_OECONF": " --with-zlib=yes",
  "PACKAGES": "kexec kdump vmcore-dmesg",
  "ALLOW_EMPTY_${PN}": "1",
