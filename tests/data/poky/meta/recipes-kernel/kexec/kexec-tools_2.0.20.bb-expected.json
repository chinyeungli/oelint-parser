  "INITSCRIPT_PARAMS": "start 56 2 3 4 5 . stop 56 0 1 6 .",
  "SYSTEMD_PACKAGES": "kdump",
  "SYSTEMD_SERVICE": "kdump.service",
  "SECURITY_PIE_CFLAGS": "-fPIE -pie",
  "COMPATIBLE_HOST": "'(x86_64.*|i.86.*|arm.*|aarch64.*|powerpc.*|mips.*)-(linux|freebsd.*)'",
