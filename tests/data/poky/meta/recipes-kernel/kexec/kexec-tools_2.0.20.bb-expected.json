  "FILES": "${sbindir}/kexec\n${sbindir}/kdump \u001b               ${sysconfdir}/sysconfig/kdump.conf \u001b               ${sysconfdir}/init.d/kdump \u001b               ${libexecdir}/kdump-helper \u001b               ${systemd_unitdir}/system/kdump.service \u001b\n${sbindir}/vmcore-dmesg",
